    //
      if lt IE 9script(src='https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js')
      script(src='https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js')
  body
    #wrapper
      // Navigation
      nav.navbar.navbar-default.navbar-static-top(role='navigation', style='margin-bottom: 0')
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') VMI - Automat #{automatennummer}
        // /.navbar-header
        .navbar-default.sidebar(role='navigation')
          .sidebar-nav.navbar-collapse
            ul#side-menu.nav
              li
                a(href='/dashboard')
                  i.fa.fa-dashboard.fa-fw
                  |  Dashboard
              li
                a(href='#')
                  i.fa.fa-hdd-o.fa-fw
                  |  VMC
                ul.nav.nav-second-level
                  li
                    a(href='/vmc/log')
                      i.fa.fa-list.fa-fw
                      |  Log
                  li
                    a(href='/vmc/settings')
                      i.fa.fa-cog.fa-fw
                      |  Einstellungen
                  li
                    a(href='/vmc/info', target="_blank")
                      i.fa.fa-info.fa-fw
                      |  Info
                  li
                    a(href='/vmc/manual', target="_blank")
                      i.fa.fa-question-circle-o.fa-fw
                      |  Handbuch
              li
                a(href='/receipts')
                  i.fa.fa-list.fa-fw
                  |  Belegübersicht
          // /.sidebar-collapse
        // /.navbar-static-side
      #page-wrapper
        .row
          .col-lg-12
            h1.page-header Belegübersicht
          // /.col-lg-12
        // /.row
         .row
          .col-lg-12
            h1.page-header VMC Einstellungen
          // /.col-lg-12
        // /.row
        // FILTER TODO
        //.row
          .col-md-2.mb-3
            .form-group.input-group
              input#DatePicker.form-control(type='text' value='10.03.2018')
              span.input-group-btn
                button#SearchBtn.btn.btn-default(type='button')
                  i.fa.fa-search
        .row
        table#receipts.table.table-striped.table-bordered.table-hover(width='100%')
          thead
            tr
              th Datum
              th Uhrzeit
              th Belegnummer
              th Key/Card
              th Benutzergruppe
              th Benutzeruntergruppe
              th Artikelnummer
              th Umsatz
              th Endsaldo
          tfoot
            tr
              th Datum
              th Uhrzeit
              th Belegnummer
              th Key/Card
              th Benutzergruppe
              th Benutzeruntergruppe
              th Artikelnummer
              th Umsatz
              th Endsaldo                                                                                                                                                                                                                                        
      // /#page-wrapper
    // /#wrapper
    // jQuery
    script(src='../vendor/jquery/jquery.min.js')
    // Bootstrap Core JavaScript
    script(src='../vendor/bootstrap/js/bootstrap.min.js')
    // Metis Menu Plugin JavaScript
    script(src='../vendor/metisMenu/metisMenu.min.js')
    // Morris Charts JavaScript
    script(src='../vendor/raphael/raphael.min.js')
    script(src='../vendor/morrisjs/morris.min.js')
    // DataTables JavaScript
    script(src='../vendor/DataTables/datatables.min.js')
    // Bootstrap Datepicker JavaScript
    script(src='../vendor/bootstrap-datepicker/js/bootstrap-datepicker.min.js')
    // Custom Theme JavaScript
    script(src='../dist/js/sb-admin-2.js')
    script(src='../javascripts/receipts.js')
    script.
      $(document).ready(function(){
        $('#receipts').DataTable({
          ajax: {
            url: "receipts/data",
            type: "GET",
            dataSrc: "Data",
          },
          language: {
            url: "/languages/de-DE.json"
          },
          responsive: true,
          columns: [
            { data: "Datum" },
            { data: "Uhrzeit" },
            { data: "Belegnummer" },
            { data: "Key/Card" },
            { data: "Benutzergruppe" },
            { data: "Benutzeruntergruppe" },
            { data: "Artikelnummer" },
            { data: "Umsatz" },
            { data: "Endsaldo" }
          ]
        });
        $('#DatePicker').datepicker({
          todayBtn: "linked",
          language: "de",
          format: "dd.mm.yyyy",
          calendarWeeks: true,
          autoclose: true,
          todayHighlight: true
        });
      });