            span.icon-bar
          a.navbar-brand(href='/') VMI - Automat #{automatennummer}
        // /.navbar-header
        .navbar-default.sidebar(role='navigation')
          .sidebar-nav.navbar-collapse
            ul#side-menu.nav
              li
                a(href='/dashboard')
                  i.fa.fa-dashboard.fa-fw
                  |  Dashboard
              li
                a(href='#')
                  i.fa.fa-hdd-o.fa-fw
                  |  VMC
                ul.nav.nav-second-level
                  li
                    a(href='/vmc/log')
                      i.fa.fa-list.fa-fw
                      |  Log
                  li
                    a(href='vmc/settings')
                      i.fa.fa-cog.fa-fw
